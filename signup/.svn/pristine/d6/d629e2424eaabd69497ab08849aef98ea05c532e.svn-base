@import '../../common/css/base.wxss';
@import "../../wxParse/wxParse.wxss";
@import '../../template/tabbar/tabbar.wxss';
/**index.wxss**/
.wrapper-tool{
  padding-bottom:128rpx;
}
.su-banner{
  width: 100%;
  border-top: 1rpx solid #e9e9e9;
  box-shadow: 0px 3px 2px #e9e9e9;
}
.su-banner>image{
  display: block;
  width: 100%;
  height: auto;
}
.item-padding{
  border-bottom:1rpx solid #f1f1f1;
  padding:30rpx 0;
}
.item-padding:last-child{
  border-bottom:none;
}
.su-title{
  font-weight: bold;
  font-size: 40rpx;
  text-align: left;
  display:block;
}
.su-ctem{
  display: flex;
  align-items: center;
  direction: row;
}
.su-ctem>image{
  width:40rpx;
  margin-right: 22rpx;
  height: 40rpx;
}
.su-ctem>image.sharebtn{
  margin-left: 82rpx;
}
.ctem-top{margin-top:20rpx;}
.su-ctem .icon{
  font-size: 50rpx;
}
.su-ctem .icon-share{margin-left:50rpx;}
.item>.editor-txt{font-size: 30rpx;}
.editor-txt>.wxParse-p{
line-height:50rpx;
}

.activity-list .activity-title{
  padding: 20rpx 0;
  text-align: center;
}
.activity-list .activity-item{
  
  margin:30rpx;
  border:1px solid #eee;
  text-align: center; 
  padding:10rpx;
}
.activity-list .activity-item text{
  font-size:30rpx;
}
.wxParse-img {
  max-width: 100%;
}
