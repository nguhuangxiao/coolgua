@import '../../common/font/iconfont.wxss';
@import '../../common/css/base.wxss';
@import '../../template/tabbar/tabbar.wxss';
.valid-person{
  border-top:1rpx solid #ddd;
  box-shadow: 0px 3px 2px #e9e9e9;
  width:100%;
  top:0px;
  background: #fff;
  z-index: 88;
}
.form-sign{
  padding-bottom:120rpx;
}
.sign-item{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin:24rpx 0;
}
.sign-item .input{
  border:1px solid #bebebe;
  padding-left:10rpx;
  border-radius:8rpx;
  height: 54rpx;
  font-size: 30rpx;
}
.sign-item .mobile{
  width:510rpx;
}
.sign-item .code{
  width:250rpx;
}

.sign-item>text{
  width: 140rpx;
}
.sign-item .getCode{
  font-size: 34rpx;
  border:none;
  background: #f6f6f6;
  color:#e70012;
  border-radius: 10rpx;
  width: 252rpx;
  height: 58rpx;
  text-align: center;
  line-height: 58rpx;
  margin-left: 8rpx;  
}
.sign-item .getCode:active{
    background-color: rgba(0, 0, 0, 0.1); 
    opacity: 0.7;
}
.getCode.disabled{
  color:#fff;
  pointer-events: none;
}
.getCode.disabled1{
  pointer-events: none;
}
.rightBtn{
  display: flex;
  justify-content: center;
  align-content: center;
  margin-left: 8rpx;
}
.rightBtn>image{
  font-size: 40rpx;
  color: #000000;
  margin-top: -3rpx;
  width: 56rpx;
  height: 56rpx;
}

.su-container.paddTop{
  padding-top:26rpx;
  padding-bottom:26rpx;
}
.form-item>view{
  display: block;
  margin-bottom: 16rpx;
}
.form-item>view>.require{
  color: red;
}
.form-item>.input{
  border:1px solid #bebebe;
  padding-left:10rpx;
  border-radius:8rpx;
  height: 70rpx;
}
form-item>.textarea{
  border:1px solid #bebebe;
  width:300px;
  height:150px;
}

.mask{
  position: fixed;
  z-index: 1;
  background: rgba(239, 242, 244, 0.8);
  width:100%;
  height: 100%;
  left: 0px;
  margin-top:7rpx;
}
.submit-tab .tab-ticket{
  display:flex;
  align-items:center;
  justify-content:center;
}
.form-sign .form-item:first-child{
  margin-top:10px
}
form-sign .form-item{
  margin-bottom:32rpx;
}
.place-holder{
  color: #d6d2d2
}