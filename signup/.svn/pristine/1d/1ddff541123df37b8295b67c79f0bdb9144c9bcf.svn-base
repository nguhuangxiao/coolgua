.main-flex{
  display: flex;
}
.statistics-main{
  background: #fff;
  padding: 20px;
  .select-option{
    text-align: right;
    margin: 10px 0;
    display: flex;
    justify-content: flex-start;
    .chart-time{
      margin-left: 20px;
      .time-block{
        margin: 0 10px;
      }
    }
    em{
      margin-right: 10px;
      font-style: normal;
    }
  }
  .data-show{
    .table-list{
      width: 100%;
      th,td{
        padding:10px 10px;
        border: 1px solid #eeeeee
      }
      th{
        background: #f7f7f7;
      }
    }
  }
  .chartmain{
    margin-top:20px;
  }
  .ant-input{min-width: auto;}
}
.rank-section .inner-box{
  .title{
    text-align: center;
    font-size: 20px;
    width: 130px;
    font-size: 13px;
    border: 1px solid #ffa800;
    padding: 2px 0px;
    margin-bottom: 12px;
    margin-left: 20px;
  }
  .botitle{
    text-align: center;
    font-size: 13px;
    border: 1px solid #ffa800;
    float: right;
    margin-top: 15px;
    margin-right: 18px;
    padding: 2px 10px;
    min-width: 105px;
  }
  .chart-box{
    display: flex;
    ul{
      width: 80px;
      text-align: center;
      display: flex;
      flex-direction: column;
      list-style: none;
      li{
        margin: 10px 0;
        margin-bottom: 0px;
        img{
          width: 30px;
          height: 30px;
          border-radius: 50%;
          box-shadow: 0px 0px 3px #928e8e;
          display: block;
          margin: 0 auto;
        }
        .name{
          display: block;
          text-align: center;
        }
      }
    }
    .chart{
      width: 90%;
      border-left: 1px solid #999;
      border-bottom: 1px solid #999;
      ol{
        display: flex;
        height: 100%;
        flex-direction: column;
        li{
          line-height: 51px;
          height: 51px;
          text-align: center;
          font-size: 18px;
          color: #fff;
          margin: 10px 0;
          display: flex;
          align-items: flex-start;
          margin-bottom: 0px;
          div{
            height: 30px;
            line-height: 30px;
            position: relative;
            text-align: right;
            span.pm{
              position: absolute;
              right: 0px;
              color: #5f5959;
              font-size: 16px;
              margin-right: -42px;
              font-weight: bold;
              top:0px;
            }
            span.val{
              padding-right: 10px;
            }
          }

        }
      }
    }
  }

}
