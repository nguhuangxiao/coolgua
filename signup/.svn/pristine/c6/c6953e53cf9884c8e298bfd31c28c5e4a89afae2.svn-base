.setting-content{
  display: flex;
  border: 1px solid #ddd;
  background: #fff;
  .field-area{
    width: 251px;
    background: #fff;
    border-right: 1px solid #ddd;
    padding: 10px;
    #base-box>p, #add-box>p{
      width:229px;
      height:34px;
      background:rgba(228,228,228,1);
      font-size: 15px;
      text-align: center;
      margin-bottom: 0px;
      line-height: 34px;
    }
    .field-ul{
      display: flex;
      flex-flow: wrap;
    }
    .field-ul li{
      width:50%;
      span{
        display: block;
        margin: 10px;
        border: 1px solid #ddd;
        padding: 5px;
        text-align: center;
        cursor: context-menu;
      }
    }
    .sortable-copy{
      position: absolute;
      z-index: 2;
    }
    .sortable-placeholder-two{
      span{
        border: 1px solid #ddd;
        margin: 10px;
        padding: 5px;
        text-align: center;
      }
    }
  }
  .sort-area{
    display: block;
    flex: 1;
    padding: 20px;
    .drag-ol>li{display: flex;align-items: center;margin: 20px 0;border: 2px dashed #fff;width: 100%;padding: 5px 5px;min-height: 32px;}
    .drag-ol>li>label:first-child{
      width: 110px;
      margin-right: 10px;
    }
    .drag-ol>li>input[type=text], .drag-ol>li>textarea{
      font-family: "Monospaced Number", "Chinese Quote", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "Helvetica Neue", Helvetica, Arial, sans-serif;
      -webkit-box-sizing: border-box;
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      list-style: none;
      position: relative;
      display: inline-block;
      padding: 4px 11px;
      width: 40%;
      height: 32px;
      font-size: 14px;
      line-height: 1.5;
      color: rgba(0, 0, 0, 0.65);
      background-color: #fff;
      background-image: none;
      border: 1px solid #d9d9d9;
      border-radius: 4px;
      -webkit-transition: all .3s;
      transition: all .3s;
    }
    .drag-ol>li>textarea{
      min-height: 32px;
      height: auto;
      outline: none;
    }
    .drag-ol .radio-box>div, .drag-ol .checkbox-box>div{
      display: flex;
      align-items: center;
      margin: 10px 0;
    }
    .anticon-minus-circle-o, .anticon-plus-circle-o, .anticon-delete{
      font-size: 22px;
      margin-left: 20px;
      cursor: pointer;
    }
    .add-ul-h{min-height: 300px;
      .labname{
        width: 110px;
        border-radius: 4px;
        font-size: 14px;
        outline: none;
        border: 1px solid #fff;
        padding-left: 0;
      }
      .labput{
        width: 150px;
        border-radius: 4px;
        font-size: 14px;
        outline: none;
        border: 1px solid #fff;
        padding-left: 0;
      }
    }

  }
}
.add-ul-h{
  .ant-checkbox-wrapper{
    margin-left:20px;
  }
}
#sortable4{
  .ui-sortable-helper{
    background: #eee;
    opacity: 0.8;
  }
  .sortable-placeholder-two{
    border: 2px dashed #ddd;
    background: #fff;
    opacity: 1;
  }
  .sortable-placeholder-one{
    border: 2px dashed #ddd;
    background: #fff;
    opacity: 1;
  }
  >li:hover{
    border: 2px dashed #ddd;
  }
  .country-flex{
    display: flex;
    flex-direction: column;
    .ant-select-selection{
      margin: 5px 0;
    }
  }
  .checkbox-box>div>.ant-checkbox-wrapper{margin-left: 0px;margin-right:8px;}
}
