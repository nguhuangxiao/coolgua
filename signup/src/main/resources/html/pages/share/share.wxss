@import '../../common/css/base.wxss';
@import '../../common/font/iconfont.wxss';
page{
  background-color:#eff2f4;
}
.su-wrapper{
  background: #fff;
  margin: 24rpx;
  height: 100%;
  border-radius: 4px;
  box-shadow: 0px 0px 6px #D6CFCF;
}
.person{
  display: flex;
  align-items: center;
}
.person>.avator{
  border-radius: 50%;
  margin-right: 12rpx;
  box-shadow: 0px 1px 4px #B7B3B3;
}
.person>.user-info{
  display: flex;
  flex-direction: column;
}
.person>.user-info>.name{
   font-size: 30rpx;
}
.person>.user-info>.zh{
   font-size: 31rpx;
}
.person .avator{
  width: 80rpx;
  height: 80rpx;
}
.picture-box{
  border: 1px solid #f0f3f5;
  margin-top:18rpx;
}
.picture-box>image{
  display: block;
  width:100%;
}
.introduce{
  font-size: 30rpx;
  border-bottom: 1rpx solid #f1f1f1;
}
.introduce>.title{
  font-size: 40rpx;
  margin: 18rpx 0;
}
.su-ctem{
  display: flex;
  align-items: center;
  direction: row;
  margin-bottom:14rpx;
}
.su-ctem>image{
  width:40rpx;
  margin-right: 22rpx;
  height: 40rpx;
}
.company-qcode-box{
  width: 261rpx;
  margin: 24rpx auto 10rpx auto;
  display: flex;
  justify-content: center;
  position: relative;
  visibility: hidden;
}
.showstatus.active{
  visibility: visible;
}
.company-qcode-box .mask-logo{
  position: absolute;
  transform:translate(-50%,-50%);
  left: 50%;
  top: 50%;
  width: 261rpx;
  height: 261rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.mask-logo .mask-box{
  width: 115rpx;
  height: 115rpx;
  border-radius: 50%;
  background:#fff;
  display: block;
  position: absolute;
  transform:translate(-50%,-50%);
  left: 50%;
  top: 50%;
}
.mask-logo>image{
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  display: block;
  position: relative;
  z-index: 3;
  box-shadow: 0px 1px 2px #B7B3B3;
  margin-right: -1rpx;
  visibility: hidden;
}
.company-qcode{
  display: block;
  width: 261rpx;
  height: 297rpx;
}

.share-tool{
  height: 200rpx;
  background: #fff;
  border-top:1px solid #ededed;
  width:100%;
  position:fixed;
  bottom:0px;
}
.share-tool>text{
  font-size: 24rpx;
  display: block;
  text-align: center;
  margin: 25rpx auto 20rpx auto; 
  background: #fff;
  width: 293rpx;
}
.share-tool>text:after{
  content: "";
  width:95%;
  height:1rpx;
  position: absolute;
  background: #ededed;
  display: block;
  left:50%;
  margin-left: -47.5%;
  margin-top: -16rpx;
  z-index: -1
}

.share-tool .share-icon{
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  width:200rpx;
  align-items: center;
  justify-content: center;
  position:relative;
}
.share-tool .share-box{
  display: flex;
  justify-content: center;
}
.share-tool .share-icon>image{
  width: 76rpx;
  height: 76rpx;
  background:#e60012;
  border-radius:50%;
}
.open-share-btn{
  width: 100px;
  height: 58px;
  position: absolute;
  top:0;
  left:-1px;
  opacity:0;
}

.shareImg1{
  width:750px;
  height:600px;
  position: fixed;
  top: 0;
  left: 999px;
  background: #fff;
}
.shareImg2{
  width:750px;
  height:1002px;
  position: fixed;
  top: 0;
  left: 1400px;
}