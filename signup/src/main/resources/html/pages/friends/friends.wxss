@import '../../common/css/base.wxss';

page{
  background: #eff2f4;
}
.bg-banner{
  height: 180rpx;
  width: 100%;
  background-size: 100% 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  position: relative;
  background:#e70012;
}
.bg-banner .bgpic{
  position: absolute;
  top:0px;
  left: 0px;
  width: 100%;
  height: 180rpx;
}
.title.share-title{
  font-size: 40rpx;
  text-align: center;
  z-index:2;
  position:relative;
  margin-top:-20rpx;
}
.myshare-main{
  margin:10px 15px;
  z-index:2;
  position:relative;
}
.current-item{
  margin-top: -60rpx;
  background:#fff;
  border-radius:4px;
}
.current-person{
  display: flex;
  align-items: center;
  padding: 15rpx;
  font-size: 34rpx;
  justify-content:flex-start;
}
.current-person.center{
    justify-content: center;
}
.current-person.start{
    justify-content: flex-start;
}

.current-person .list{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  flex: 2;
}
.current-person .list.plt{
  margin:0 10rpx;
  flex: 1;
}
.current-person .list.p1{justify-content:flex-end;}
.current-person .list.p2{justify-content:flex-start;}
.current-person .list>image.logo{
  width: 72rpx;
  height:72rpx;
  border-radius: 50%;
  display: block;
  box-shadow:0px 1px 4px #B7B3B3;
}
.current-person .list>image.logo{
  margin-right:10rpx;
}
.current-person .leftbtn{
  width: 56rpx;
  height: 56rpx;
}
.friend{
  display: flex;
  justify-content:flex-start;
  flex-wrap:wrap;
}
.friend>.person{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 25%;
}
.friend>.person>text{
  margin: 7rpx 0;
  font-size: 30rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.friend>.person>image{
  width: 80rpx;
  border-radius: 50%;
  height: 80rpx;
  display: block;
  margin:10rpx 10rpx;
  box-shadow:0px 1px 4px #B7B3B3;
}

.byInvateLogo{
  width: 72rpx;
  border-radius: 50%;
  height: 72rpx;
  display: block;
}


.item-yq:after{
  content: "邀请好友";
  position: absolute;
  width: 20%;
  left: 50%;
  margin-left: -10%;
  background: #fff;
  text-align: center;
  font-size: 30rpx;
  display: block;
  margin-top:-18rpx;
}
.item-sy:after{
  content: "受邀好友";
  position: absolute;
  width: 20%;
  left: 50%;
  margin-left: -10%;
  background: #fff;
  text-align: center;
  font-size: 30rpx;
  display: block;
  margin-top:-18rpx;
}

.friend-item{
  background:#fff;
  border-radius:4px;
  margin-top:16rpx;
  font-size: 30rpx;
}
.friend-item.kid-item{
  padding-bottom:20rpx;
}
.friend-item>.info{
  display: flex;
  padding: 35rpx 40rpx;
  justify-content: space-between;
  border-bottom:1rpx solid #f1f1f1;
  margin-bottom:30rpx;
}
.friend-item>.info>view{
  font-size: 34rpx;
  position: relative;
  width: 50%;
}

.friend-item>.info>view>text{
  margin-left: 26rpx;
}
